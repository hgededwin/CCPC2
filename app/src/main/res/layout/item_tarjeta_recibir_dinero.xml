<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tarjetas"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/txt_nombre_titular_recibir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Javier LÃ³pez"
            android:textSize="16sp"
            android:fontFamily="@font/helveticaneuemedium"
            android:textColor="@color/whitePrimary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/line"
            android:layout_marginRight="50dp"
            />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_cuenta_recibir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta"
                android:textColor="@color/whitePrimary"
                android:fontFamily="@font/helveticaneuemedium"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/txt_numero_cuenta_recibir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whitePrimary"
                android:textSize="16sp"
                android:fontFamily="@font/couriernew"
                android:layout_below="@+id/txt_cuenta_recibir"
                android:text="4355 6457 3442 3111"/>

            <View
                android:id="@+id/line_vertical"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_toRightOf="@+id/txt_numero_cuenta_recibir"
                android:layout_alignBottom="@+id/txt_numero_cuenta_recibir"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/txt_banco_recibir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banco"
                android:textColor="@color/whitePrimary"
                android:fontFamily="@font/helveticaneuemedium"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/line_vertical"
                />

            <TextView
                android:id="@+id/txt_banco_destino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whitePrimary"
                android:text="@string/str_stp"
                android:fontFamily="@font/couriernew"
                android:textSize="16sp"
                android:layout_below="@+id/txt_banco_recibir"
                android:layout_toRightOf="@id/line_vertical"
                />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLABE"
            android:textColor="@color/whitePrimary"
            android:fontFamily="@font/helveticaneuemedium"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/txt_clabe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="123123469837462738"
            android:fontFamily="@font/couriernew"
            android:textColor="@color/whitePrimary"

            />



    </LinearLayout>


</androidx.cardview.widget.CardView>