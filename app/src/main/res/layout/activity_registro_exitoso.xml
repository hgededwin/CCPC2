<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitePrimary"
    tools:context=".Registro.RegistroExitosoActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btn_aceptar"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_registro_exitoso"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bien" />

        <TextView
            android:id="@+id/txt_registro_exitoso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/str_registro_exitoso"
            android:textAlignment="center"
            style="@style/Titulo"
            />

        <TextView
            android:id="@+id/txt_leyenda_registro_exitoso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:maxWidth="243dp"
            android:text="Se ha realizado exitosamente tu registro, comienza a usar la aplicaciÃ³n"
            android:textAlignment="center"
            style="@style/SubtitleCacao"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_aceptar"
        style="@style/PrimaryAcionButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"

        android:layout_marginLeft="@dimen/margin_side"
        android:layout_marginRight="@dimen/margin_side"
        android:layout_marginBottom="@dimen/margin_side"
        android:onClick="onClickRegistroExitoso"
        android:text="@string/str_terminar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>
